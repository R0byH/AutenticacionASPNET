@model List<AutenticacionASPNET.Models.Producto>
@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>📦 Gestión de Productos</h1>
        <a asp-action="CrearProducto" class="btn btn-success">+ Nuevo Producto</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Estado</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>$@producto.Precio.ToString("N2")</td>
                        <td>
                            <span class="badge bg-@(producto.Stock > 10 ? "success" : producto.Stock > 0 ? "warning" : "danger")">
                                @producto.Stock
                            </span>
                        </td>
                        <td>
                            @if (producto.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="EditarProducto" asp-route-id="@producto.Id" class="btn btn-sm btn-warning">Editar</a>
                            <form asp-action="EliminarProducto" asp-route-id="@producto.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este producto?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">← Volver al Panel</a>
</div>
