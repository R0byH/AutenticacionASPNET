@model AutenticacionASPNET.Models.Producto
@{
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Tienda</a></li>
            <li class="breadcrumb-item active">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <h1 class="display-1">📦</h1>
                    <p class="text-muted">Imagen del producto</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h1>@Model.Nombre</h1>
            <hr>
            <p class="lead">@Model.Descripcion</p>

            <h2 class="text-success mt-4">$@Model.Precio.ToString("N2")</h2>

            <div class="mt-4">
                <p>
                    <strong>Stock disponible:</strong>
                    <span class="badge bg-@(Model.Stock > 10 ? "success" : Model.Stock > 0 ? "warning" : "danger") fs-5">
                        @Model.Stock unidades
                    </span>
                </p>
                <p><strong>Fecha de creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
            </div>

            @if (Model.Stock > 0)
            {
                <button class="btn btn-success btn-lg w-100 mt-4">🛒 Agregar al Carrito</button>
            }
            else
            {
                <button class="btn btn-secondary btn-lg w-100 mt-4" disabled>Agotado</button>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-4">← Volver a la Tienda</a>
</div>
